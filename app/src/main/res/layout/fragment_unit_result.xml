<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myInstance"
            type="com.litbig.engapp.testcase.ResultFragment" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".testcase.ResultFragment">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@{myInstance::onClick}"
            android:text="@string/selectPass"
            android:textSize="@dimen/fac_text_normal_l" />

        <Button
            android:id="@+id/btnNG"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@{myInstance::onClick}"
            android:text="@string/selectNG"
            android:textSize="@dimen/fac_text_normal_l" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
