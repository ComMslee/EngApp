<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".testcase.DiskFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fac_btn_height_m"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStorage01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SD"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage01_mount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="mount"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage01_read"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="read"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage01_write"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="write"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fac_btn_height_m"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStorage02"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="USB01"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage02_mount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="mount"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage02_read"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="read"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage02_write"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="write"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fac_btn_height_m"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStorage03"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="USB02"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage03_mount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="mount"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage03_read"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="read"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                    <TextView
                        android:id="@+id/tvStorage03_write"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_fac_text"
                        android:gravity="center"
                        android:text="write"
                        android:textColor="@color/btn_text_normal"
                        android:textSize="@dimen/fac_text_normal_m" />

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/result"
            android:name="com.litbig.engapp.testcase.ResultFragment"
            android:layout_width="@dimen/selectArea"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
