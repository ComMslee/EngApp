<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myInstance"
            type="com.litbig.engapp.MainFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainFragment">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000000"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLCD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="LCD"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnTouch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="Touch"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnDisk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="Disk"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnHWKey"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="HWKey"
                    android:textSize="@dimen/fac_text_normal_m" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSpeaker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="Speaker"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnMic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="MIC"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnGPS"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="GPS"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnRadio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="Radio"
                    android:textSize="@dimen/fac_text_normal_m" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDAB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="DAB"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnAux"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="Aux"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnWiFi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="WIFI"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnBT"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="BT"
                    android:textSize="@dimen/fac_text_normal_m" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCamera"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="Camera"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:id="@+id/btnSensor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:text="Sensor"
                    android:textSize="@dimen/fac_text_normal_m" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:textSize="@dimen/fac_text_normal_m"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="@{myInstance::onClick}"
                    android:textSize="@dimen/fac_text_normal_m"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:background="#000000"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/btn_text_normal" />

            <ImageView
                android:id="@+id/ivBarCode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="@{()->myInstance.endTest()}"
                android:text="Finish"
                android:textAllCaps="false"
                android:textSize="@dimen/fac_text_normal_m" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
